{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch odoo server",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "pythonPath": "${command:python.interpreterPath}",
      //"program": "${file}", use this to debug opened file.
      "program": "${workspaceRoot}\\odoo\\odoo-bin.py",
      "args": [
        "--config=${workspaceRoot}\\odoo\\odoo.conf"
      ],
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "redirectOutput": false,
      /*"debugOptions": [
          "WaitOnAbnormalExit",
          "WaitOnNormalExit"
      ]*/
    }
  ]
}