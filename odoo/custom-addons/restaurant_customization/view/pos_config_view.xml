<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record model="ir.ui.view" id="view_pos_config_form">
            <field name="name">pos.config.form.inherit</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_config_form" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='receipt']" position="after">
                    <group string="Product Category wise Discounts">
                        <field name='category_discount'/>
                        <label string="" colspan="2" />
                        <field name='pos_category_discount_ids' attrs="{
                            'required': [('category_discount', '=', True)],
                            'invisible':[('category_discount', '=', False)]}" widget="many2many_tags" />
                      <field name="discount_product_category"/>
                    </group>
                </xpath>
            </field>
     </record>
</odoo>
