<odoo>
  
  <data>
    <record id="website_sale_epayco_journal" model="account.journal">
        <field name="name">Web Site Pay by ePayco</field>
        <field name="code">PEPC</field>
        <field name="type">sale</field>
        <field name="default_debit_account_id" ref="l10n_co.1_co_puc_414015"/>
        <field name="default_credit_account_id" ref="l10n_co.1_co_puc_414015"/>
        <field name="show_on_dashboard">True</field>
    </record>
  </data>

  <data noupdate="1">
    <record id="payment_acquirer_epayco" model="payment.acquirer">
      <field name="name">ePayco</field>
      <field name="sequence">10</field>
      <field name="provider">epayco</field>
      <field name="company_id" ref="base.main_company"/>
      <field name="view_template_id" ref="checkout"/>
      <field name="auto_confirm">generate_and_pay_invoice</field>
      <field name="journal_id" ref="website_sale_epayco_journal"/>
      <field name="image" type="base64" file="payment_epayco/static/description/icon.png"/>
      <field name="module_id" ref="base.module_payment_epayco"/>
      <field name="environment">test</field>
      <field name="website_published" eval="False"/>
      <field name="pre_msg"><![CDATA[
      <p>You will be redirected to the ePayco website after clicking on the payment button.</p>]]></field>
      <field name="description" type="html">
        <p>
    Secure payments by the ePayco payment platform.
        </p>
        <ul class="list-inline">
          <li class="list-inline-item"><i class="fa fa-check"/>Online Payment</li>
          <li class="list-inline-item"><i class="fa fa-check"/>Credit cards, debit, cash</li>
        </ul>
      </field>
      <field name="epayco_payment_method_ids" eval='[(6, 0, [ref("payment_epayco.epayco_payment_method_tdc"),
                                          ref("payment_epayco.epayco_payment_method_pse"),
                                          ref("payment_epayco.epayco_payment_method_sp"),
                                          ref("payment_epayco.epayco_payment_method_cash"),
                                          ref("payment_epayco.epayco_payment_method_dp")])]'/>
      <field name="payment_icon_ids" eval='[(6, 0, [ref("payment_epayco.payment_icon_cc_mastercard"),
                                          ref("payment_epayco.payment_icon_cc_diners_club_intl"),
                                          ref("payment_epayco.payment_icon_cc_visa"),
            ref("payment_epayco.payment_icon_baloto"),
            ref("payment_epayco.payment_icon_daviplata"),
            ref("payment_epayco.payment_icon_davivienda"),
            ref("payment_epayco.payment_icon_efecty"),
            ref("payment_epayco.payment_icon_gana"),
            ref("payment_epayco.payment_icon_pse"),
            ref("payment_epayco.payment_icon_puntored"),
            ref("payment_epayco.payment_icon_redservi"),
            ref("payment_epayco.payment_icon_safetypay")])]'/>
      <field name="epayco_p_cust_id">dummy</field>
      <field name="epayco_p_key">dummy</field>
      <field name="epayco_public_key">dummy</field>
    </record>
  </data>
</odoo>
