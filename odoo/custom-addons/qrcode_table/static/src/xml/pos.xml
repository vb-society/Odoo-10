    <t t-extend="PosTicket">
        <t t-jquery=".pos-sale-ticket" t-operation="replace">
            <div class="pos-sale-ticket">
                <img src='/web/binary/company_logo' width="100%" />
                <t t-if="receipt.header">
                    <div style='text-align:center'>
                        <t t-esc="receipt.header" />
                    </div>
                </t>
                <div style="text-align:left">
                    <strong>R.No :
                        <t t-esc="order.name" /></strong><br />
                    <div>Date :
                        <t t-esc="order.formatted_validation_date" />
                    </div>
                </div>
                <div class="receipt-user">
                    Transaction By:
                    <t t-esc="widget.pos.get_cashier().name" /><br />
                </div>
                <t t-if="order">
                    <t t-if="order.table">
                        <div class="receipt-table_name">
                            <strong>Table :
                                <t t-esc="order.table.name" /></strong>
                        </div>
                    </t>
                </t>
                <br />
                <t t-set="tt_qty" t-value="0" />
                <table class='receipt-orderlines'>
                    <th width='25%'>No</th>
                    <th width='50%' style="text-align:center">Description</th>
                    <th width='25%' style="text-align:right">Amt (RM)</th>
                    <tr t-foreach="orderlines" t-as="orderline">
                        <t t-set="tt_qty" t-value="tt_qty + orderline.quantity" />
                        <td style="text-align:left">
                            <t t-esc="orderline.get_quantity_str_with_unit()" />
                        </td>
                        <td>
                            <t t-esc="orderline.get_product().display_name" />
                            <t t-if="orderline.get_discount() > 0">
                                <div class="pos-disc-font">
                                    With a
                                    <t t-esc="orderline.get_discount()" />% discount
                                </div>
                            </t>
                        </td>
                        <td class="pos-right-align">
                            <t t-esc="widget.format_currency(orderline.get_display_price())" />
                        </td>
                    </tr>
                </table>
                <br />
                <table class='receipt-total'>
                    <tr>
                        <td colspan="2" style="border-top: 1px solid;border-style: dashed;"></td>
                    </tr>
                    <tr>
                        <td style="padding-top: 5px;padding-bottom: 5px;">Subtotal: <t t-if="tt_qty">(
                                <t t-esc="tt_qty" />)</t>
                        </td>
                        <td class="pos-right-align" style="padding-top: 5px;padding-bottom: 5px;">
                            <t t-esc="widget.format_currency(order.get_total_without_tax())" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="border-top: 1px solid;border-style: dashed;"></td>
                    </tr>
                    <tr class="emph">
                        <td style="padding-top: 5px;padding-bottom: 5px;">Total:</td>
                        <td class="pos-right-align" style="padding-top: 5px;padding-bottom: 5px;">
                            <t t-esc="widget.format_currency(order.get_total_with_tax())" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="border-top: 1px solid;border-style: dashed;"></td>
                    </tr>
                </table>
                <br />
                <table class='receipt-paymentlines'>
                    <t t-foreach="paymentlines" t-as="line">
                        <tr>
                            <td>
                                <t t-esc="line.name" />
                            </td>
                            <td class="pos-right-align">
                                <t t-esc="widget.format_currency(line.get_amount())" />
                            </td>
                        </tr>
                    </t>
                </table>
                <br />
                <table class='receipt-change'>
                    <tr>
                        <td>Change:</td>
                        <td class="pos-right-align">
                            <t t-esc="widget.format_currency(order.get_change())" />
                        </td>
                    </tr>
                </table>
                <t t-if="receipt.footer">
                    <hr style="border-style: dashed;" />
                    <br />
                    <div style='text-align:center'>
                        <t t-esc="receipt.footer" />
                    </div>
                </t>
            </div>
        </t>
    </t>
    <t t-extend="Orderline">
        <t t-jquery="li:first-child" t-operation="replace">
            <li t-attf-class="orderline #{ line.selected ? 'selected' : '' } #{line.linked_line_id ? 'linked_line_modify' : ''}">
                <span class="product-name">
                    <t t-esc="line.get_product().display_name" />
                    <t t-if="line.get_product().tracking!=='none'">
                        <i t-attf-class="oe_link_icon fa fa-list oe_icon line-lot-icon #{line.has_valid_product_lot() ? 'oe_green' : 'oe_red' }" />
                    </t>
                </span>
                <span class="price">
                    <t t-esc="widget.format_currency(line.get_display_price())" />
                </span>
                <ul class="info-list">
                    <t t-if="line.get_quantity_str() !== '1' || line.selected ">
                        <li class="info">
                            <em>
                                <t t-esc="line.get_quantity_str()" />
                            </em>
                            <t t-esc="line.get_unit().name" />
                            at
                            <t t-esc="widget.format_currency(line.get_unit_display_price(),'Product Price')" />
                            /
                            <t t-esc="line.get_unit().name" />
                        </li>
                    </t>
                    <t t-if="line.get_discount_str() !== '0'">
                        <li class="info">
                            With a
                            <em>
                                <t t-esc="line.get_discount_str()" />%
                            </em>
                            discount
                        </li>
                    </t>
                </ul>
            </li>
        </t>
    </t>
</templates>