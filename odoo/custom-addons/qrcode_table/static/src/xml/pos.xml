<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="TableOrderButton">
        <span class="control-button table_order_list">
            <i class="fa fa-list"></i>
            Table Orders
        </span>
    </t>
    <t t-name="TableOrderListWiget">
        <div class="clientlist-screen table_order_screen_cl screen">
            <div class="screen-content">
                <section class="top-content">
                    <span class='button back'>
                        <i class='fa fa-angle-double-left'></i>
                        Cancel
                    </span>
                </section>
                <section class="full-content">
                    <div class='window'>
                        <section class='subwindow'>
                            <div class='subwindow-container'>
                                <div class='subwindow-container-fix touch-scrollable scrollable-y'>
                                    <table class='client-list tableorders-list'>
                                        <tbody class='table_order_list_contents'>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </div>
        </div>
    </t>
    <t t-name="TableOrderLine">
        <t t-if="tableorders">
            <t t-foreach="tableorders" t-as="tos">
                <tr t-attf-class="table_order_client_line #{tos_index == 0 ? 'highlight' : ''}" class='table_order_client_line' t-att-data-id="tos.id">
                    <td class="td_clickable">
                        <b>Token: # <t t-esc='tos.token' /></b>
                    </td>
                    <td class="td_clickable">
                        <b>Table: <t t-esc='tos.table_name or ""' /></b>
                    </td>
                     <td class="td_clickable">
                        <t t-esc='tos.date_order or ""' />
                    </td>
                    <td><span class="button resume_order_cl" t-att-data-id='tos.id'>Add to Cart</span></td>
                    <td><span class="button btn_accept_all_order" t-att-data-id='tos.id'>Accept All</span></td>
                    <!-- <td><span class="button btn_send_to_kitchen_order" t-att-data-id='tos.id'>Send To Kitchen</span></td> -->
                    <td><span class="button btn_cancel_all_order" t-att-data-id='tos.id'>Cancel</span></td>
                </tr>
                <t t-if="tos.line">
                    <tr t-att-data-parent_id="tos.id" t-attf-class="table_order_list_product #{tos_index == 0 ? '' : 'tr-hide'}">
                        <td colspan="10">
                            <table style="width:100%;">
                                <thead>
                                    <th>Product</th>
                                    <th>Notes</th>
                                    <th>QTY</th>
                                    <th>Price</th>
                                    <th>Status</th>
                                </thead>
                                <tbody>
                                    <t t-foreach="tos.line" t-as="line">
                                        <tr t-att-data-line-id="line.id">
                                            <td>
                                                <t t-esc="line.name" />
                                            </td>
                                            <td>
                                                <t t-esc="line.note" />
                                            </td>
                                            <td>
                                                <t t-esc="line.qty" />
                                            </td>
                                            <td>
                                                <t t-esc="line.price" />
                                            </td>
                                            <td>
                                                <t t-esc="line.state" />
                                            </td>
                                            <td>
                                                <span t-attf-class="control-button btn_table_order_state mt10 btn_small_size #{line.state=='confirm' ? '' : 'btn-hide'}" data-state="ordered" t-att-data-id='line.id'>Accepted</span>
                                                <span t-attf-class="control-button btn_table_order_state mt10 btn_small_size #{line.state=='ordered' ? '' : 'btn-hide'}" data-state="prepared" t-att-data-id='line.id'>Preparing</span>
                                                <span t-attf-class="control-button btn_table_order_state mt10 btn_small_size #{line.state=='prepared' ? '' : 'btn-hide'}" data-state="served" t-att-data-id='line.id'>Served</span>
                                                <span t-attf-class="control-button btn_table_order_state mt10 btn_small_size #{line.state!='cancel' ? '' : 'btn-hide'}" data-state="cancel" t-att-data-id='line.id'>Cancel</span>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </t>
            </t>
        </t>
    </t>
