# If you want to use XFCE config tools...
#
#xfce-mcs-manager &

# Turn off DPMS (Display Power Management Signaling)
xset -dpms

# Disable screen saver blanking 
xset s off

DISPLAY_URL='http://salchipapon.vb-society.com/web?#view_type=kanban&model=pos.config&menu_id=195&action=311'

#colocar logo VBS de fondo de pantalla
if [ -f ~/.fehbg ]; then
  sh ~/.fehbg &
else
  feh --bg-scale ~/wallpaper/vb-society.jpg  
fi

# Make sure Chrome is always started - restart if needed 
rm -rf ~/.{config,cache}/chromium/
chromium-browser \
	--kiosk \
	--noerrdialogs \
	--disable-notifications \
	--start-fullscreen \
	--no-first-run \
	--disable-infobars \
	--disable-session-crashed-bubble \
	--disable-translate \
	--disable-features=TranslateUI "${DISPLAY_URL}" &


