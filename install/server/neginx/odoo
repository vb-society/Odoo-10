upstream backend-odoo {
	server 127.0.0.1:8069;
}

upstream backend-odoo-im {
	server 127.0.0.1:8072;
}

server {
	listen 80 default;
	
	# proxy timeout
	proxy_read_timeout 720s;
	proxy_connect_timeout 720s;
	proxy_send_timeout 720s;
	# proxy buffer
	proxy_buffers 16 64k;
	proxy_buffer_size 128k;

	# proxy header and settings
	proxy_set_header Host $host;
	proxy_set_header X-Real-IP $remote_addr;
	proxy_set_header X-Forward-For $proxy_add_x_forwarded_for;
	proxy_set_header X-Forwarded-Proto $scheme;

	# log
	access_log /var/log/nginx/odoo.access.log;
	error_log /var/log/nginx/odoo.error.log;
	location / {
		proxy_pass http://backend-odoo;

		# forzar timeouts si el backend no responde
		proxy_next_upstream error timeout invalid_header http_500 http_502

		http_503 http_504;
		proxy_redirect off;
	}
	
	# activar el cach√© de contenido
	location ~* /web/static/ {
		# cache static data
		proxy_cache_valid 200 60m;
		proxy_buffering on;
		expires 864000;
		proxy_pass http://backend-odoo;
	}
	
	# soportar Long Polling/LiveChat
	location /longpolling {
		proxy_pass http://backend-odoo-im;
	}

	# habilitar compresion de datos
	gzip on;
	gzip_min_length 1100;
	gzip_buffers 4 32k;
	gzip_types text/css text/less text/plain text/xml application/xml application/json
	application/javascript;
	gzip_vary on;
}
